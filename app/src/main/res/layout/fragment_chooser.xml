<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.zebrostudio.rxlowpoly.ChooserFragment">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:titleTextColor="@color/colorWhite"/>

  <Button
    android:id="@+id/bitmapAsyncButton"
    android:layout_width="@dimen/fragment_chooser_button_width"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fragment_chooser_button_margin_top"
    android:text="@string/bitmap_async_example_fragment_name"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/toolbar"
    app:layout_constraintVertical_bias="0.0"
    app:layout_constraintVertical_chainStyle="packed" />

  <Button
    android:id="@+id/bitmapSyncButton"
    android:layout_width="@dimen/fragment_chooser_button_width"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fragment_chooser_button_margin_top"
    android:text="@string/bitmap_sync_example_fragment_name"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/bitmapAsyncButton"
    app:layout_constraintVertical_chainStyle="packed"/>

  <Button
    android:id="@+id/drawableAsyncButton"
    android:layout_width="@dimen/fragment_chooser_button_width"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fragment_chooser_button_margin_top"
    android:text="@string/drawable_async_example_fragment_name"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/bitmapSyncButton"
    app:layout_constraintVertical_chainStyle="packed"/>

  <Button
    android:id="@+id/drawableSyncButton"
    android:layout_width="@dimen/fragment_chooser_button_width"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fragment_chooser_button_margin_top"
    android:text="@string/drawable_sync_example_fragment_name"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/drawableAsyncButton"
    app:layout_constraintVertical_chainStyle="packed"/>

  <Button
    android:id="@+id/fileAsyncButton"
    android:layout_width="@dimen/fragment_chooser_button_width"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fragment_chooser_button_margin_top"
    android:text="@string/file_async_example_fragment_name"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/drawableSyncButton"
    app:layout_constraintVertical_chainStyle="packed"/>

  <Button
    android:id="@+id/fileSyncButton"
    android:layout_width="@dimen/fragment_chooser_button_width"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fragment_chooser_button_margin_top"
    android:text="@string/file_sync_example_fragment_name"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/fileAsyncButton"
    app:layout_constraintVertical_chainStyle="packed"/>


  <Button
    android:id="@+id/uriAsyncButton"
    android:layout_width="@dimen/fragment_chooser_button_width"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fragment_chooser_button_margin_top"
    android:text="@string/uri_async_example_fragment_name"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/fileSyncButton"
    app:layout_constraintVertical_chainStyle="packed"/>

  <Button
    android:id="@+id/uriSyncButton"
    android:layout_width="@dimen/fragment_chooser_button_width"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fragment_chooser_button_margin_top"
    android:text="@string/uri_sync_example_fragment_name"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/uriAsyncButton"
    app:layout_constraintVertical_chainStyle="packed"/>

</androidx.constraintlayout.widget.ConstraintLayout>